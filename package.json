{
  "name": "lufalyze",
  "version": "1.0.0",
  "description": "Browser-based loudness analyzer implementing EBU R 128 / ITU-R BS.1770-4 standard",
  "homepage": "https://github.com/tillrd/Lufalyze",
  "repository": {
    "type": "git",
    "url": "https://github.com/tillrd/Lufalyze.git"
  },
  "bugs": {
    "url": "https://github.com/tillrd/Lufalyze/issues"
  },
  "keywords": [
    "loudness",
    "audio",
    "analysis",
    "EBU R 128",
    "ITU-R BS.1770-4",
    "webassembly",
    "broadcast"
  ],
  "author": "Lufalyze Contributors",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "node scripts/version.js && npx vite",
    "build": "node scripts/version.js && npm run build:wasm && npx vite build",
    "build:wasm": "cd loudness-wasm && wasm-pack build --target web --out-dir pkg",
    "postbuild": "cp loudness-wasm/pkg/loudness_wasm* dist/",
    "preview": "npx vite preview",
    "version": "node scripts/version.js",
    "lint": "eslint src --ext .ts,.tsx",
    "build:worker": "tsc --project tsconfig.worker.json",
    "test:audio": "npm run build:worker && tsx src/test.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "deploy": "npm run build && netlify deploy --prod --dir=dist",
    "deploy:preview": "npm run build && netlify deploy --dir=dist"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "comlink": "^4.3.1",
    "music-metadata": "^11.3.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "wav-decoder": "^1.3.0",
    "wavesurfer.js": "^6.6.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.3",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "happy-dom": "^12.10.3",
    "netlify-cli": "^17.0.0",
    "postcss": "^8.4.31",
    "puppeteer": "^24.10.1",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.20.3",
    "typescript": "^5.4.4",
    "vite": "^5.2.0",
    "vite-plugin-pwa": "^0.16.0",
    "vitest": "^1.6.1"
  }
}
